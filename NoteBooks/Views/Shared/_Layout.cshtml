<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @*<link rel="stylesheet" href="~/Content/Site.css">*@

    <title>@ViewBag.Title БЛОКНОТЫ</title>

    @Styles.Render("~/Content/Site.css")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>



<body>
    <div class="navbar-header navbar-fixed-top">
        <div>
            <a href="/home/Index">
                <img src="~/Source/title.bmp" alt="Logo" class="img-responsive pic" />
            </a>
            
        </div>
        <div class="navbar  navbar-inverse navbar-collapse collapse">

            <div class="container">
                <ul class="nav navbar-nav">
                    <li class="NavbarLi">@Html.ActionLink("О ПРОЕКТЕ", "About", "Home")</li>
                    <li class="NavbarLi">@Html.ActionLink("ИЗДЕЛИЯ", "Product", "Home")</li>
                    <li class="NavbarLi">@Html.ActionLink("ГАЛЕРЕЯ РАБОТ", "Gallery", "Home")</li>
                    <li class="NavbarLi">@Html.ActionLink("КАК ЗАКАЗАТЬ", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>


    <div class="navbar-fixed-bottom">
        <div class="container body-content">

            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year – приложение ASP.NET</p>
            </footer>
        </div>
    </div>



    @RenderBody()
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
